.container {
  padding: 30rpx;
}

.license-container {
  position: relative;
  width: 690rpx;
  height: 434.444444rpx;
  display: flex;
  flex-direction: column;
}

.driver-license {
  display: block;
  width: 100%;
  height: 100%;
  opacity: 0.2;
}

.driver-license.ready {
  opacity: 1;
}

.icon-camera {
  position: absolute;
  font-size: 160rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.instruction {
  position: absolute;
  width: 100%;
  left: 0;
  top: 100%;
  text-align: center;
}

form {
  width: 100%;
}

.cu-form-group .title {
  width: calc(4em + 30rpx);
}
